<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/login_scroll_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.LoginActivity"
        android:background="@color/white">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
        />
        <EditText
            android:id="@+id/login_email_field"
            style="@style/login_input"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
        />
        <EditText
            android:id="@+id/login_password_field"
            style="@style/login_input"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@+id/login_email_field"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
        />
        <Button
            android:id="@+id/login_btn"
            style="@style/login_btn"
            android:text="Log in"
            android:background="@drawable/login_button_bg"
            app:layout_constraintTop_toBottomOf="@id/login_password_field"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
        />

        <TextView
            android:id="@+id/sign_up_caption"
            style="@style/signup_caption"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/sign_up_caption"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>